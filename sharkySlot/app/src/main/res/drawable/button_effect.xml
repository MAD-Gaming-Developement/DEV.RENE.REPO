<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="?android:attr/colorControlHighlight"> <!-- Change the color as desired -->

    <!-- This is the shape that will be revealed by the ripple effect -->
    <item android:id="@android:id/mask">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white"/> <!-- Change the color if needed -->
            <corners android:radius="8dp"/> <!-- Adjust the radius to change corner roundness -->
        </shape>
    </item>

    <!-- This is the content of the ripple (could be your button background) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/colorPrimary"/> <!-- Set your desired button color -->
            <corners android:radius="8dp"/> <!-- Adjust the radius to change corner roundness -->
        </shape>
    </item>
</ripple>
